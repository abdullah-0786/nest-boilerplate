{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      { "include": "i18n/**/*", "watchAssets": true },
      { "include": "modules/email/**/*", "watchAssets": true }
    ],
    "deleteOutDir": true,
    "plugins": ["@nestjs/swagger"]
  }
}
